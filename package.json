{
    "name": "vscode-powerquery-sdk",
    "displayName": "Power Query SDK",
    "description": "Power Query Connector SDK",
    "version": "0.0.3",
    "author": "Microsoft Corporation",
    "license": "MIT",
    "homepage": "https://github.com/microsoft/vscode-powerquery-sdk#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/microsoft/vscode-powerquery-sdk.git",
        "directory": "client"
    },
    "issues": {
        "url": "https://github.com/microsoft/vscode-powerquery-sdk/issues"
    },
    "engines": {
        "node": ">=16.13.2 <17",
        "npm": "~8.5.0",
        "vscode": "^1.62.0"
    },
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": false
        }
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onStartupFinished",
        "onCommand:workbench.action.tasks.runTask",
        "onCommand:powerquery.sdk.pqtest.RunTestBatteryCommand",
        "onCommand:powerquery.sdk.pqtest.SetupCurrentWorkspaceCommand",
        "onView:powerquery.sdk.pqtest.LifeCycleTaskTreeView",
        "onWebviewPanel:powerquery.sdk.pqtest.ResultWebView",
        "onLanguage:powerquery"
    ],
    "extensionDependencies": [
        "PowerQuery.vscode-powerquery"
    ],
    "publisher": "PowerQuery",
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "powerquery.sdk.pqtest.RunTestBatteryCommand",
                "title": "Evaluate current power query script",
                "category": "Power query",
                "icon": "$(debug-console-evaluation-prompt)"
            },
            {
                "command": "powerquery.sdk.pqtest.SetupCurrentWorkspaceCommand",
                "title": "Setup workspace",
                "category": "Power query",
                "icon": "$(pencil)"
            }
        ],
        "configuration": {
            "title": "Power Query SDK",
            "properties": {
                "powerquery.sdk.externals.msbuildPath": {
                    "scope": "machine-overridable",
                    "type": "string",
                    "description": "Local path to PQTest installation folder."
                },
                "powerquery.sdk.externals.nugetPath": {
                    "scope": "machine-overridable",
                    "type": "string",
                    "description": "Local path to PQTest installation folder."
                },
                "powerquery.sdk.pqtest.location": {
                    "scope": "machine-overridable",
                    "type": "string",
                    "description": "Local path to PQTest installation folder."
                },
                "powerquery.sdk.pqtest.extension": {
                    "scope": "window",
                    "type": "string",
                    "description": "Specify connector extension source modules (.mez/.pqm).<br>This option can be specified more than once."
                },
                "powerquery.sdk.pqtest.queryFile": {
                    "scope": "window",
                    "type": "string",
                    "description": "Query file containing section document or M expression (.m/.pq)."
                }
            }
        },
        "taskDefinitions": [
            {
                "type": "powerquery",
                "when": "isWindows && processExecutionSupported",
                "required": [
                    "operation"
                ],
                "properties": {
                    "operation": {
                        "type": "string",
                        "description": "The operation to run"
                    },
                    "additionalArgs": {
                        "type": "array",
                        "description": "Additional commandline arguments for the operation"
                    },
                    "pathToConnector": {
                        "type": "string",
                        "description": "Path to the connector file (--extension)"
                    },
                    "pathToQueryFile": {
                        "type": "string",
                        "description": "Path to the query file (--queryFile)"
                    }
                }
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "powerquery.sdk.pqtest.LifeCycleTaskTreeView",
                    "name": "Power query SDK"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "powerquery.sdk.pqtest.LifeCycleTaskTreeView",
                "contents": "In order to use extension features, you need to create an Power query extension project.\n[Create an extension project](command:powerquery.sdk.pqtest.CreateNewProjectCommand)\nTo learn more about how to create an extension, [read our docs](https://docs.microsoft.com/en-us/powerquery-m/)."
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "powerquery.sdk.pqtest.RunTestBatteryCommand",
                    "when": "editorLangId == powerquery"
                }
            ],
            "editor/context": [
                {
                    "command": "powerquery.sdk.pqtest.RunTestBatteryCommand",
                    "when": "editorLangId == powerquery",
                    "group": "1_powerquery@1"
                }
            ]
        },
        "debuggers": [
            {
                "type": "powerquery",
                "languages": [
                    "powerquery"
                ],
                "label": "Debug PowerQuery",
                "program": "./dist/debugAdapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Absolute path to a power query file.",
                                "default": "${workspaceFolder}/${command:AskForPowerQueryFileName}"
                            },
                            "trace": {
                                "type": "boolean",
                                "description": "Enable logging of the Debug",
                                "default": true
                            },
                            "operation": {
                                "type": "string",
                                "description": "PQTest operation string",
                                "enum": [
                                    "info",
                                    "run-test",
                                    "test-connection"
                                ],
                                "enumDescriptions": [
                                    "info: Returns all module information",
                                    "run-test: test connection",
                                    "test-connection: test current connection"
                                ],
                                "default": "run-test"
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "powerquery",
                        "request": "launch",
                        "name": "Test powerquery file",
                        "program": "${workspaceFolder}/${command:AskForPowerQueryFileName}"
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "powerquery Debug: Launch",
                        "description": "A new configuration for testing power query file a user selected.",
                        "body": {
                            "type": "powerquery",
                            "request": "launch",
                            "name": "Test powerquery file",
                            "program": "^\"\\${workspaceFolder}/\\${command:AskForPowerQueryFileName}\""
                        }
                    }
                ],
                "variables": {
                    "AskForPowerQueryFileName": "powerquery.sdk.getMQueryFileName"
                }
            }
        ]
    },
    "scripts": {
        "clean": "rimraf out && rimraf dist && rimraf webviewDist",
        "vscode:prepublish": "npm run package",
        "install:pq-test-result-view": "cd webviews/pq-test-result-view && npm ci",
        "postinstall": "npm run install:pq-test-result-view",
        "compile": "webpack --mode development",
        "watch": "webpack --mode development --watch",
        "build:pq-test-result-view": "cd webviews/pq-test-result-view && npm run build",
        "build": "npm run build:pq-test-result-view",
        "package": "npm run clean && npm run build && webpack --mode production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "rimraf out && npm run compile-tests && npm run compile && npm run lint",
        "audit": "npm audit",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/chai": "^4.3.1",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.0.0",
        "@types/node": "16.x",
        "@types/vscode": "^1.62.0",
        "@typescript-eslint/eslint-plugin": "^5.5.0",
        "@typescript-eslint/parser": "^5.5.0",
        "@vscode/debugadapter": "^1.55.1",
        "@vscode/debugadapter-testsupport": "^1.55.1",
        "@vscode/test-electron": "^1.6.2",
        "chai": "^4.3.6",
        "eslint": "^8.3.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-security": "^1.4.0",
        "eslint-plugin-license-header": "^0.4.0",
        "glob": "^7.2.0",
        "mocha": "^9.1.3",
        "husky": "^8.0.1",
        "lint-staged": "^12.4.1",
        "prettier": "^2.5.0",
        "rimraf": "^3.0.2",
        "ts-loader": "^9.2.6",
        "typescript": "^4.5.2",
        "webpack": "^5.64.4",
        "webpack-cli": "^4.9.1",
        "tsconfig-paths-webpack-plugin": "^3.5.2"
    },
    "lint-staged": {
        "!(src)/**/*.{ts}": [
            "npm run lint -- --fix"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
