{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",   // TODO: should this be "Node16"?
        "target": "ES2020",
        "lib": ["ES2020"],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "strictPropertyInitialization": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", ".vscode-test", "webviews", "scripts", "test-resources", "unit-tests"]
}
